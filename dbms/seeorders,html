        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script>
      
        function cart()
            {
                window.location.assign("cart.html");
            }
        function addcart(pid)
            {
                var product=pid;
                document.getElementById('test').innerHTML=product;
                $.ajax({
    url: "addcart.php?",
    data: { 
        "pid":product
    },
    cache: false,
    type: "POST",
    success: function(response) {
     document.getElementById("test").innerHTML= response;
     
    },
    error: function(xhr) {
       document.getElementById("test").innerHTML= No;
    }
});
            }
        
var account1;
            $.ajax({
    url: "sales.php?",
    cache: false,
    type: "GET",
    success: function(response) {
        
        
        
        account1=response;
        //document.getElementById("test1").innerHTML=account;
        if(account1=="Salesperson")
            {
                
                 $("#sales").show();
                $("#sales1").show();
            }
            else{
                $("#sales").hide();
                $("#sales1").hide();
            }

    },
    error: function(xhr) {
       document.getElementById("test1").innerHTML= "No";
    }
});     
            $('#fruits').hide();
            $('#vegetables').hide();
            function view(){
                $('#fruits').show();
            $('#vegetables').show();
            }
            function noview(){
                $('#fruits').hide();
            $('#vegetables').hide();
            }
        </script>


